<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Login</title>
    <meta name="Login" content="">
    <meta name="viewport" content="width=device-width">

    <link rel="stylesheet" href="http://edchnm.gmu.edu/microbe/css/normalize.min.css">
    <link rel="stylesheet" href="http://edchnm.gmu.edu/microbe/css/microbe/jquery-ui-1.10.3.custom.min.css">
    <link rel="stylesheet" type="text/css" href="http://edchnm.gmu.edu/microbe/css/main.css" media="screen" />
</head>
<body>


<div id="login">
<form action="/login" method="post">
	<div>
	<input type="text" placeholder="Username" name="username"/><br/>
	</div>
	<div>
	<input type="password" placeholder="Password" name="password"/>
	</div>
	<div>
	<input type="submit" value="Login"/>
	</div>
	<% if (message) { %>
    <p><%= message %></p>
    <% } %>
</form>
</div>
</body>